@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor

@{ 
    ViewBag.Title = "Carrello";
    var listaProdotti = HttpContextAccessor.HttpContext.Session.Get<List<GranBazar.Models.Prodotto>>("prodottiCarrello");
}

<div class="container" style="margin-top:50px;">
    <table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:40%">Prodotto</th>
                <th style="width:10%">Prezzo</th>
                <th style="width:15%">Sconto</th>
                <th style="width:8%">Quantita'</th>
                <th style="width:17%" class="text-center">Subtotale</th>
                <th style="width:10%"></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var product in listaProdotti){
            <tr>
                <td data-th="Product">
                    <div class="row">
                        <div class="col-sm-2 hidden-xs"><img src="@product.LinkImmagine" alt="..." class="img-responsive" /></div>
                        <div class="col-sm-10">
                            <h4 class="nomargin">@product.NomeProdotto</h4>
                            <p>@product.DescrizioneProdotto</p>
                        </div>
                    </div>
                </td>
                <td data-th="Price">&euro; @product.Prezzo</td>
                <td style="color:red"> @if (product.Sconto > 0)
                {<p>&euro; @(Math.Round((Decimal)(product.Prezzo / 100 * product.Sconto),2)) (@product.Sconto%)</p>}</td>
                <td data-th="Quantity">
                    <input type="number" class="form-control text-center" value="1" min="1">
                </td>
                <td data-th="Subtotal" class="text-center">@if (product.Sconto > 0)
                { <p>&euro; @(Math.Round((Decimal)(product.Prezzo - product.Prezzo / 100 * product.Sconto), 2))</p>}
                else
                {<p>&euro; @product.Prezzo</p>} 
                    </td>
                <td class="actions" data-th="">
                    <button class="btn btn-info btn-sm"><i class="fa fa-refresh"></i></button>
                   <!--da ingrandire l'icona-->
                    <a href="/Carrello/RimuoviProdotto?id=@product.IdProdotto" class="btn-danger btn-sm"><i class="fa fa-trash-o"></i></a>
                </td>
            </tr>}
            
        </tbody>
        <tfoot>

            <tr>
                <td><a href="/Home/Index" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continua lo shopping</a></td>
                <td colspan="3" class="hidden-xs"></td>
                <td class="hidden-xs text-center"><strong>Total &euro; 1.99</strong></td>
                <td><a href="#" class="btn btn-success btn-block">Checkout <i class="fa fa-angle-right"></i></a></td>
            </tr>
        </tfoot>
    </table>
</div>

